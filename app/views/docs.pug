doctype html
html(lang="pt-br")
    include templates/head-top.pug
    link(rel="stylesheet", href="static/css/estilo.css")

    title Docs
    body
        div(class="container")
            include templates/componentes/menu-top.pug
            div() Usuário:
                span
                    strong= obj.user
            div() Acesso: 
                span
                    strong= obj.session
            a(href="sair" type="submit" role="button" class="btn btn-danger") Sair

            div(class="d-flex justify-content-center")
            br
            h3 Formulário de cadastro:        

        div(class="container")
            form(id="formCad")
                div(class="form-group")
                    input(type="text" class="form-control" name="servidor" id="servidor" placeholder="Digite o nome/ip do servidor" required)
                
                div(class="form-group")
                    input(type="text" class="form-control" name="caminho" id="caminho" placeholder="Caminho do servidor" required)
                
                div(class="form-group")
                    input(type="text" class="form-control" name="usuario" id="usuario" placeholder="Digite o usuário" required)

                div(class="form-group")
                    input(type="text" class="form-control" name="senha" id="senha" placeholder="Digite a Senha do usuário" required) 
                
                div(class="form-group")
                    textarea(cols="30", rows="3" class="form-control" name="atividade" id="atividade" placeholder="Atividade do serviço" required)

                div(class="d-flex justify-content-end")
                    button(type="reset" class="btn btn-info mr-sm-2") Limpar
                    //button(type="submit" id="salvar" class="btn btn-success btn-lg") Salvar
                    a(class="btn btn-success mr-sm-2 mb-sm-2" type="submit" id="btnCadDocs" role="button" ) Salvar

            br

            h3 Acesso e atividades T.I Alunobre:
            hr

            div(class="table-responsive-sm")        
                table(class="table table-bordered table-striped table-hover")
                    thead
                        tr
                            th Servidor
                            th Caminho
                            th Usuário
                            th Senha
                            th Atividade
                    tbody
                        for dado in dados
                            tr             
                                td
                                    a(href="#" class="servidor")
                                        div= dado.servidor
                                td
                                    div= dado.caminho
                                td
                                    div= dado.usuario
                                td
                                    div= dado.senha
                                td
                                    div= dado.atividade

        
        include templates/head-bot.pug
        br

        include templates/footer.pug

        script(src="static/js/cadastroDocs.js")
        script(src="static/js/writeFileJSON.js")
        script(src="static/js/style.js")

